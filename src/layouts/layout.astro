---
import { Font } from 'astro:assets'
import { SITE } from '@constants'
import SkipNavLink from '@components/a11y/skip-nav-link.astro'
import Header from '@components/header.astro'
import Footer from '@components/footer.astro'
import ThemeProvider from '@components/theme-provider.astro'
import '@styles/global.css'
---

<!doctype html>
<html lang={SITE.lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script
			async
			src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2236137669543501"
			crossorigin="anonymous"
		></script>
		<Font cssVariable="--font-plex-sans" preload />
		<ThemeProvider />
		{import.meta.env.PROD && (
			<>
				{/* Google Analytics */}
				<script async src="https://www.googletagmanager.com/gtag/js?id=G-NM6ZCHYCPC"></script>
				<script is:inline>
					window.dataLayer = window.dataLayer || [];
					function gtag() {
						dataLayer.push(arguments);
					}
					gtag('js', new Date());
					gtag('config', 'G-NM6ZCHYCPC');
				</script>
			</>
		)}
		<slot name="seo" />
	</head>
	<body class="min-h-screen bg-bg text-text">
		<SkipNavLink />
		<Header />
		<slot />
		<Footer />
	</body>
</html>
