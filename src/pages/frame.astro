---
import Layout from '@layouts/layout.astro'
import Seo from '@components/seo.astro'
import { getCollection } from 'astro:content'
import SkipNavContent from '@components/a11y/skip-nav-content.astro'
import { defaultDateFormat, sortDesc } from '@utils'
import Spacer from '@components/spacer.astro'
import Link from '@components/link.astro'

const frames = sortDesc(await getCollection('frame'))
---

<Layout>
	<Seo slot="seo" title="Frame" />
	<SkipNavContent>
		<h1 class="sr-only">Frame</h1>
		<div class="flex gap-10 flex-col">
			{
				frames.map(({ data: frame }) => (
					<div>
						<Link variant="highlight" class="font-medium" href={`/frame/${frame.slug}/`}>
							{frame.title}
						</Link>
						<Spacer axis="vertical" size={2} />
						<div class="text-subtle text-md md:text-lg">{frame.description}</div>
						<Spacer axis="vertical" size={2} />
						<div class="text-faded">
							{defaultDateFormat(frame.date)}
							{frame.tags.length ? ` â€” ${frame.tags.join(', ')}` : null}
						</div>
					</div>
				))
			}
		</div>
	</SkipNavContent>
</Layout>
