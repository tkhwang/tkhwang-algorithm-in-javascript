---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'span'> {
	axis: 'vertical' | 'horizontal'
	size:
		| 'px'
		| 0.5
		| 1
		| 1.5
		| 2
		| 2.5
		| 3
		| 3.5
		| 4
		| 5
		| 6
		| 7
		| 8
		| 9
		| 10
		| 11
		| 12
		| 14
		| 16
		| 20
		| 24
		| 28
		| 32
		| 36
		| 40
		| 44
		| 48
		| 52
		| 56
		| 60
		| 64
		| 72
		| 80
		| 96
}

const { size, axis, class: className, ...rest } = Astro.props
const width = axis === 'vertical' ? '1px' : `calc(var(--spacing) * ${size})`
const height = axis === 'horizontal' ? '1px' : `calc(var(--spacing) * ${size})`
---

<span
	class:list={[className, 'block']}
	style={{
		height,
		minHeight: height,
		width,
		minWidth: width,
	}}
	{...rest}></span>
