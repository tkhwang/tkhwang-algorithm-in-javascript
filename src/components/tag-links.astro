---
import { FRONTMATTER_TAGS, type FrontmatterTag } from '@constants'
import Link from './link.astro'

interface Props {
	tags: FrontmatterTag[]
}

const { tags } = Astro.props
---

{
	tags.map((tag, i) => (
		<>
			<Link
				class="font-normal no-underline hover:underline!"
				data-pagefind-filter="tag"
				href={`/tags/${FRONTMATTER_TAGS.get(tag)}/`}
			>
				{tag}
			</Link>
			{i < tags.length - 1 && ', '}
		</>
	))
}
